<%- include("../partials/header") %>

<div class="container">
  <div class="row justify-content-center m-auto">
    <div class="col-md-12 text-center">
    <h2 style="text-align: center">Add a New Comment to <em><%=park.name %></em></h2>
    <div style="width:30%; margin: 20px auto;">
      <form action="/parks/<%= park._id %>/comments" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" placeholder="text">        
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>         
        </div>
      </form>
      <a href="/parks">Go Back </a>
    </div>
  </div>
</div>
</div>



<%- include("../partials/footer") %>
