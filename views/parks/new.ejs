<%- include("../partials/header") %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Add a New Park</h1>
    <div style="width:30%; margin: 20px auto;">
      <form action="/parks" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="name">       
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="imageUrl" placeholder="image location">        
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="description" placeholder="description">        
        </div>
        <div class="form-group">
            <input class="form-control" type="number" name="price" placeholder="price" min="0.00" step="0.01">        
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>         
        </div>
      </form>
      <a href="/parks">Go Back </a>
    </div>
  </div>
</div>



<%- include("../partials/footer") %>
