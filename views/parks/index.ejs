<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
          <h1 class="display-4">Welcome to National Park Review</h1>
          <p class="lead">Learn more about World's National Parks and Landmarks</p>
          <p>
            <a class="btn btn-primary btn-lg" href="/parks/new" role="button">Add New Park</a>
          </p>
       </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Most Popular Parks</h3>
        </div>
    </div>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <%parks.forEach(function(park){%>
            <div class='col-md-3 col-sm-6'>
                <div class='thumbnail'>
                   <img src="<%=park.image%>"> 
                    <div class='caption'>
                        <h4><%=park.name%></h4>
                    </div>
                    <a href="/parks/<%=park._id%>" class="btn btn-primary">More Info</a>

                </div>
            </div>
        <%});%>
    </div>
    
</div>         

<%- include("../partials/footer") %>
